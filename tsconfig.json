{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react", 
    "rootDir": "./src/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "ts-node": { "transpileOnly": true }
}